function date (args)
file = date_pos_file

'getinfo date'
date = result

if( args != 1 )
'!/bin/rm 'file
say "Click on center position for Date"
'query pos'
xpos = subwrd(result,3)
ypos = subwrd(result,4)
write(file,xpos)
write(file,ypos)
else
xpos = sublin( read(file),2 )
ypos = sublin( read(file),2 )
endif

'draw string 'xpos' 'ypos' 'date
return
